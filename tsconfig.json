{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "common": ["common"],
      "common-app": ["common-app"],
      "core": ["core"],
      "layouts": ["layouts"],
      "pods": ["pods"],
    }
  },
  "include": ["./src/**/*"]
}
